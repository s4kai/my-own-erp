root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_size = 4
max_line_length = 100

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.yml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# XML files (pom.xml, Spring configs, etc.)
[*.xml]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

